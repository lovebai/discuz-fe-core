{
  "compilerOptions": {
    "jsx": "react",
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es6",
    "rootDir": "src",
    "lib": ["es2017", "dom"],
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "sourceMap": true,
    "paths": {
      "@app/*": ["./*"],
      "@discuz/design": ["../../discuz-design"],
      "@discuz/design/*": ["../../discuz-design/*"],
    },
    "downlevelIteration": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "compileOnSave": false
}
